page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.userImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

/* 设置标题左右线 */
.content-title {
  display: table;
  width: 100%;
  line-height: 50rpx;
  white-space: nowrap;
  border-spacing: 2rem 0;
  font-size: 30rpx;
  color: gray
}

.content-title::before,
.content-title::after {
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#eee, #eee) repeat-x center;
  background-size: 0.1rem 0.1rem;
}

/* 设置内容框 */
.content {
  width: 90%;
  padding-top: 20rpx;
  margin: 10px auto;
  background-color: white;
  border-radius: 20rpx;
}

/* 个人信息 */
.first {
  width: 90%;
  height: 400rpx;
  text-align: center;
}

.first view {
  margin-top: 20rpx;
  font-size: 28rpx;
}

/* 信息前 小图标 */
.img {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

/* 教育背景 */
.two {
  height: 400rpx;
  text-align: center;
}

.major {
  display: flex;
  margin-left: 40rpx;
  margin-top: 30rpx;
}

.major view {
  margin-left: 20rpx;
  font-size: 28rpx;
}

/* 获奖情况 */
.prove {
  font-size: 28rpx;
  left: 0;
  right: 0;
  margin: 20rpx auto;
}
.prove:hover{
  color: red;
}

/* 自我评价 */
.person {
  text-align: center;

}

.three {
  padding-bottom: 20rpx;
}

.three-content {
  display: flex;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}

.three-content text {
  padding-left: 10rpx;
  font-size: 26rpx;
}